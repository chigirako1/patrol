        <%= value.num_of_files %>:@<%= twtid %>
        <% twt_account = Twitter.find_by_twtid_ignore_case(twtid) %>
        (<%= link_to_ex "■twt■", twt_account %>)
        <br />
    <% end %>
<% end %>

<% if @misc_urls and @misc_urls.size != 0 %>
    <h2>misc url list(<%= @misc_urls.size %>)</h2>
    <% @misc_urls.each do |url| %>
        <%= link_to_ex url, url %>
        <br />
    <% end %>
<% end %>
