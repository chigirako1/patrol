        <% url_tu = artists_twt_index_path(filename: file, hide_day: 30, pred: 5, target:"twt,twt未知") %>
        <% url_u = artists_twt_index_path(filename: file, hide_day: 30, pred: 5, target:"unknown_pxv") %>
