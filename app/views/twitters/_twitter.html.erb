<div id="<%= dom_id twitter %>">
    <p>
        <%= twitter.drawing_method %>
        (<%= twitter.filenum %>)

        <%= %!「#{twitter.comment}」! if twitter.comment.presence %>
        <%= %!|「#{twitter.remarks}」! if twitter.remarks.presence %>
        <%= %!|「#{twitter.warning}」! if twitter.warning.presence %>

        <% if twitter.pxvid.presence %>
            <strong>Pxvid:</strong>
            <%= twitter.pxvid %>
        <% end %>

        <% if twitter.main_twtid.presence %>
            <strong>main:</strong>
            @<%= twitter.main_twtid %>
        <% end %>

        <% if twitter.sub_twtid.presence %>
            <strong>sub:</strong>
            @<%= twitter.sub_twtid %>
        <% end %>

        <% if twitter.alt_twtid.presence %>
            <strong>alt:</strong>
            @<%= twitter.alt_twtid %>
        <% end %>

        <% if twitter.new_twtid.presence %>
            <strong>new:</strong>
            @<%= twitter.new_twtid %>
        <% end %>

        <% if twitter.old_twtid.presence %>
            <strong>old:</strong>
            @<%= twitter.old_twtid %>
        <% end %>

        <strong>全画像数：</strong>
        <%= twitter.filenum %>

        <strong>登録日:</strong>
        <%= twitter.get_datetime_string(twitter.created_at) %>
        (<%= Util.get_date_info(twitter.created_at) %>)
    </p>
</div>
